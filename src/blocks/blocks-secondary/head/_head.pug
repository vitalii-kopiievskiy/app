mixin head(_title, _subtitle, _txt, _txtTwo, _link, _txtlink, _img, _alt)
    section 
        .main-head
            .container
                .row
                    .col-6
                        h1.main-head__title.mt-5= _title
                        h2.main-head__subtitle= _subtitle 
                        p.main-head__text.mt-4= _txt
                        p.main-head__text= _txtTwo
                        a.main-head__btn.mt-5(href= _link)= _txtlink
                            i.main-head__icon.fas.fa-long-arrow-alt-right
                    .col-6
                        img.img-fluid.d-block.mx-auto.main-head__image.mt-4(src= _img, alt= _alt)
