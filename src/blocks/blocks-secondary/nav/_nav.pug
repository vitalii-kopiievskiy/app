mixin nav(_c1, _c2, _c3, _c4, _c5, _c6)
    nav.nav
        .container
            .row.d-flex.align-items-center
                .col-2
                    .nav__logo
                        a(href="index.html")
                            img(src="https://www.sparkleappz.com/wp-content/uploads/2019/12/logo-187x66.png", alt="logo")
                .col-5.offset-2
                    
                        ul.nav__menu.menu.d-flex.justify-content-between
                            li.nav__item
                                a.menu-item(href="index.html", class= `${_c1}`) Home  
                            li.nav__item
                                a.menu-item.active(href="about.html", class= `${_c2}`) About
                            li.nav__item
                                a.menu-item(href="javascript:void(0)", class= `${_c3}`) Services
                                    i.menu__icon.fas.fa-chevron-down.ml-2
                                ul.nav__submenu.submenu
                                    .row
                                        .col-12
                                            li.submenu__item
                                                a.submenu-item(href="ios.html") iOS App Development
                                            li.submenu_item
                                                a.submenu-item(href="android.html") Android App Development
                                            li.submenu__item
                                                a.submenu-item(href="websites.html") Websites Development Services
                                            li.submenu__item
                                                a.submenu-item(href="unity.html") Unity 3D Game Development
                                            li.submenu__item
                                                a.submenu-item(href="marketing.html") Digital Marketing Services
                                            li.submenu__item
                                                a.submenu-item(href="ui.html") UI/UX Design Services
                            li.nav__item
                                a.menu-item(href="portfolio.html", class= `${_c4}`) Portfolio
                            li.nav__item
                                a.menu-item(href="blog.html", class= `${_c5}`) Blog
                            li.nav__item
                                a.menu-item(href="contact.html", class= `${_c6}`) Contact
                                
                .col-3
                    .nav__links.d-flex.justify-content-end
                        a.nav-link(href="services/contact.html") Get a free quote
                        a.nav-link.nav-link--call(href="services/contact.html") Call 
                                i.contact-icon.fas.fa-phone
                include burger/_burger.pug
                
    hr.nav__line