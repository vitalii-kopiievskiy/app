mixin burger
    nav.burger
        .container
            .row
                .col-12
                    .burger__menu
                        input#checkbox(type='checkbox')
                        label.burger__button(for='checkbox')
                            svg.ham.hamRotate.ham4(viewBox='0 0 100 100', width='80', onclick="this.classList.toggle('active')")
                                path.line.top(d='m 70,33 h -40 c 0,0 -8.5,-0.149796 -8.5,8.5 0,8.649796 8.5,8.5 8.5,8.5 h 20 v -20')
                                path.line.middle(d='m 70,50 h -40')
                                path.line.bottom(d='m 30,67 h 40 c 0,0 8.5,0.149796 8.5,-8.5 0,-8.649796 -8.5,-8.5 -8.5,-8.5 h -20 v 20')
                        ul.burger-nav__list
                            li.burger-nav__item
                                a.burger-nav__link(href="index.html") Home
                            li.burger-nav__item
                                a.burger-nav__link(href="about.html") About
                            li.burger-nav__item
                                a.burger-nav__link(href="javascript:void(0)") Services
                                input#submenubox(type='checkbox')
                                label.submenu__button(for='submenubox')
                                ul.burger__submenu
                                    li.submenu__item
                                        a.burger-item(href="ios.html") iOS App Development
                                    li.submenu__item
                                        a.burger-item(href="android.html") Android App Development
                                    li.submenu__item
                                        a.burger-item(href="websites.html") Websites Development Services
                                    li.submenu__item
                                        a.burger-item(href="unity.html") Unity 3D Game Development
                                    li.submenu__item
                                        a.burger-item(href="marketing.html") Digital Marketing Services
                                    li.submenu__item
                                        a.burger-item(href="ui.html") UI/UX Design Services
                            li.burger-nav__item
                                a.burger-nav__link(href="portfolio.html") Portfolio
                            li.burger-nav__item
                                a.burger-nav__link(href="blog.html") Blog
                            li.burger-nav__item
                                a.burger-nav__link(href="contact.html") Contact
                                
                            li
                                .burger__links.d-flex.justify-content-center.mt-3
                                    a.burger-link(href="mailto:info@sparkleappz.com") Get a free quote
                                    a.burger-link.burger-link--call(href="tel:+91-7737791591") Call 
                                            i.contact-icon.fas.fa-phone